<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/secondary_color"
        android:elevation="4dp"
        app:title="@string/device_detail"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Device Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_information"
                        android:textSize="18sp"
                        android:textColor="@color/primary_color"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Device ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/device_id"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvDeviceIdValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ESP32_001"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/montserrat" />
                    </LinearLayout>

                    <!-- Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/device_type"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvTypeValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="smart_lock"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/montserrat" />
                    </LinearLayout>

                    <!-- Model -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/device_model"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvModelValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ESP32-WROOM-32"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/montserrat" />
                    </LinearLayout>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvStatusValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ONLINE"
                            android:textSize="14sp"
                            android:textColor="@color/green_status"
                            android:fontFamily="@font/montserrat_bold" />
                    </LinearLayout>

                    <!-- Created At -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/created_at"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvCreatedAtValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01/01/2024 12:00"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/montserrat" />
                    </LinearLayout>

                    <!-- Last Active -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/last_active"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_color"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:id="@+id/tvLastActiveValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01/01/2024 14:30"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/montserrat" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/actions"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/montserrat_bold" />

            <!-- Unlock by Face Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnlockByFace"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="@string/unlock_by_face"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                app:icon="@drawable/face_24px"
                app:iconGravity="start"
                app:backgroundTint="@color/green_status"
                app:cornerRadius="8dp" />

            <!-- Enroll Fingerprint Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnrollFingerprint"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="@string/enroll_fingerprint"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                app:icon="@drawable/ic_fingerprint"
                app:iconGravity="start"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="8dp" />

            <!-- Enroll RFID Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnrollRfid"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:text="@string/enroll_rfid"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                app:icon="@drawable/ic_rfid"
                app:iconGravity="start"
                app:backgroundTint="@color/secondary_color"
                app:cornerRadius="8dp" />

            <!-- View Logs Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewLogs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/view_logs"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                app:icon="@drawable/ic_log"
                app:iconGravity="start"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/secondary_color"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
