<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/secondary_color"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_organization"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_organization_description"
            android:textSize="14sp"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Organization Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOrganizationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/organization_name"
            android:layout_marginTop="16dp"
            app:startIconDrawable="@drawable/business_24px"
            app:startIconTint="@color/secondary_color"
            app:boxStrokeColor="@color/secondary_color"
            app:hintTextColor="@color/secondary_color"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOrganizationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/montserrat" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:layout_marginTop="16dp"
            app:startIconDrawable="@drawable/location_on_24px"
            app:startIconTint="@color/secondary_color"
            app:boxStrokeColor="@color/secondary_color"
            app:hintTextColor="@color/secondary_color"
            app:layout_constraintTop_toBottomOf="@id/tilOrganizationName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:fontFamily="@font/montserrat" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Create Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateOrganization"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/create_organization"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:backgroundTint="@color/secondary_color"
            android:layout_marginTop="32dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tilAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminateTint="@color/white"
            app:layout_constraintTop_toTopOf="@id/btnCreateOrganization"
            app:layout_constraintBottom_toBottomOf="@id/btnCreateOrganization"
            app:layout_constraintStart_toStartOf="@id/btnCreateOrganization"
            app:layout_constraintEnd_toEndOf="@id/btnCreateOrganization" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
