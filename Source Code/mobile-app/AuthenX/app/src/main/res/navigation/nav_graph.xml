<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.authenx.presentation.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_faceAuthenFragment"
            app:destination="@id/faceAuthenFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scanFingerprintFragment"
            app:destination="@id/scanFingerprintFragment" />
        <action
            android:id="@+id/action_homeFragment_to_statisticFragment"
            app:destination="@id/statisticFragment" />
    </fragment>
    <fragment
        android:id="@+id/faceAuthenFragment"
        android:name="com.example.authenx.presentation.ui.FaceAuthenFragment"
        android:label="fragment_face_authen"
        tools:layout="@layout/fragment_face_authen" />
    <fragment
        android:id="@+id/scanFingerprintFragment"
        android:name="com.example.authenx.presentation.ui.ScanFingerprintFragment"
        android:label="fragment_scan_fingerprint"
        tools:layout="@layout/fragment_scan_fingerprint" />
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.example.authenx.presentation.ui.StatisticFragment"
        android:label="StatisticFragment" />
</navigation>